<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_paper"
    tools:context="ru.codebreakergame.DialogNewGameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Начать новую игру?"
        android:id="@+id/textViewStartNewGame"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Да"
        android:id="@+id/buttonNewGameYes"
        android:layout_below="@+id/textViewStartNewGame"
        android:layout_alignLeft="@+id/textViewStartNewGame"
        android:layout_alignStart="@+id/textViewStartNewGame"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нет"
        android:id="@+id/buttonNewGameNo"
        android:layout_below="@+id/textViewStartNewGame"
        android:layout_alignRight="@+id/textViewStartNewGame"
        android:layout_alignEnd="@+id/textViewStartNewGame"/>
</RelativeLayout>
