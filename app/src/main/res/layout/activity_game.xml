<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/real"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_paper"
    android:keepScreenOn="true"
    tools:context=".activity.GameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlueGreyDarkMaterial"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:id="@+id/relativeLayout">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/layoutAlphaBet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/buttonAlphabetWord_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  А  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Б  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  В  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Г  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Д  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Е  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Ж  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  З  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  И  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Й  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  К  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Л  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  М  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Н  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  О  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  П  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Р  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  С  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_19"
                    android:layout_width="wrap_content"
