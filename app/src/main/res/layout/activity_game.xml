                    android:text="  Т  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  У  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Ф  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Х  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Ц  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Ч  " />

                <Button
                    android:id="@+id/buttonAlphabetWord_25"
                    android:layout_width="wrap_content"
