<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppDefault" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorWhite</item>
         <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowActionBar">false</item>  эта строчка не нужна, т.к.
        новый стиль уже NoActionBar, т.е. экшенбара уже не должно быть и так-->
    </style>
    <!-- код до 6 урока выглядел так:
        <style name="AppTheme" parent="AppTheme.Base" />

        <style name="AppTheme.Base" parent="Theme.AppCompat">

            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            &lt;!&ndash;     <item name="colorAccent">@color/colorAccent</item>&ndash;&gt;
            <item name="android:windowActionBar">false</item>
        </style>-->
</resources>


